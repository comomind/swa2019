<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#111E39"
    tools:context=".ui.CallStateActivity">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <TableRow
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewState"
                android:layout_width="640px"
                android:layout_height="480px"
                android:layout_centerInParent="true"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="320px"
                android:layout_height="240px"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/textViewSpaceCS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:gravity="center">

            <TextView
                android:id="@+id/textViewCallState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:layout_span="2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonAcceptClick"
                android:text="Accept" />
            <Button
                android:id="@+id/buttonReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonRejectClick"
                android:text="Reject" />

        </TableRow>
        <TableRow
            android:gravity="center">
            <Switch
                android:id="@+id/switchVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video :"
                android:checked="true"
                android:textOff="OFF"
                android:textColor="#ffffff"
                android:textOn="ON"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>